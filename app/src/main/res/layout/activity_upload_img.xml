<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".uploadImgActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tlbr"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:theme="@style/Theme.Intern.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            layout="@layout/appbaruploadimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="13dp" />

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/upldImg"
        android:layout_width="215dp"
        android:layout_height="150dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/vengance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tlbr" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="49dp"
        android:background="@drawable/img_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.79"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tlbr" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/selectimg"
        android:layout_width="342dp"
        android:layout_height="74dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="26dp"
        android:background="@drawable/uploadimagefactivityselectbtn"
        android:text="Select Image"
        android:textAllCaps="false"
        android:textColor="#1E1E1E"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upldImg" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/upldimg"
        android:layout_width="342dp"
        android:layout_height="74dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/cutm_upldbtn"
        android:text="Upload Image"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@+id/selectimg"
        app:layout_constraintTop_toBottomOf="@+id/selectimg" />


</androidx.constraintlayout.widget.ConstraintLayout>