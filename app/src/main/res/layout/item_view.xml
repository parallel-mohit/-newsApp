<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="42.98dp"
                android:layout_height="42.98dp"


                android:src="@drawable/verge"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="101.9dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="24dp"
                    android:text="The Verge"
                    android:textSize="15.02sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"

                    android:id="@+id/author"
                    android:textColor="#757575"
                    android:text="Tech News"
                    android:textSize="12.88sp" />
            </LinearLayout>


        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="393dp"

        android:layout_marginTop="12dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/rctxt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meta explains how AI influences what see on"
            android:textSize="13sp"

            android:textColor="@color/black"
            tools:layout_editor_absoluteX="65dp"
            tools:layout_editor_absoluteY="185dp" />

        <TextView
            android:id="@+id/rctxt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="facebook and instagram"
            android:textSize="13sp"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="236dp" />

        <com.google.android.material.imageview.ShapeableImageView

            app:shapeAppearanceOverlay="@style/roundedImageView"
            android:id="@+id/rcimg"
            android:layout_width="362dp"
            android:layout_height="254dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/rctext1"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="view all 9 comments"
            android:textColor="#1E1E1E"
            android:textSize="11sp"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18.11dp"
                android:layout_height="16.46dp"

                android:src="@drawable/like" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                android:text="21 likes"
                android:textSize="11sp" />


            <ImageView
                android:layout_width="17dp"
                android:layout_height="17.5dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/comment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="9 comments"
                android:textSize="11sp" />

            <ImageView
                android:layout_width="17dp"
                android:layout_height="18.21dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/img_5" />

            <TextView
                android:layout_width="85dp"
                android:layout_height="18dp"
                android:layout_marginLeft="5dp"
                android:text="share"
                android:textSize="11sp" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
