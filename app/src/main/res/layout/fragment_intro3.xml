<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intro3">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/skip3"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_btn"
        android:text="@string/skip_intro"
        android:textAllCaps="false"
        android:textColor="#306FA8"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.896"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="265.9dp"
        android:layout_height="256dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/img__3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="342dp"
        android:layout_height="351dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#306FA8"
        android:elevation="5dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/upperCrdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="29dp"
            android:paddingTop="45dp"
            android:text="Our Vision"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/middleCrdText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:paddingStart="29dp"
            android:text="Lorem ispum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor indididunt ut labore et dolore magna aliqua,Ut enim ad minim veniam"
            android:textColor="#BCB7B7"
            android:textSize="17sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ready3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="119dp"
            android:layout_marginTop="210dp"
            android:text="Ready"
            android:background="@drawable/custom_ready1btn" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
